<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/final_bg">
        
        <TextView 
            android:id="@+id/final_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是XXX画的图"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFFCC"
            android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/final_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案：苹果"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
        
        <ImageView 
            android:layout_width="210dp"
            android:layout_height="120dp" 
            android:id="@+id/final_canva_bg"
            android:background="@drawable/canva_bg"
            android:layout_centerInParent="true"/>
        
        <RelativeLayout 
            android:id="@+id/final_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/final_canva_bg"
            android:layout_marginTop="12dp">
        	<Button 
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:id="@+id/final_button_flower"
            	android:background="@drawable/button_flower"
            	android:layout_marginLeft="60dp"/>
        
        	<Button 
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:id="@+id/final_button_kiss"
            	android:background="@drawable/button_kiss"
            	android:layout_alignTop="@id/final_button_flower"
            	android:layout_toRightOf="@id/final_button_flower"
            	android:layout_marginLeft="18dp"/>
        
        	<Button 
           	 	android:layout_width="30dp"
           		android:layout_height="30dp"
            	android:id="@+id/final_button_egg"
            	android:background="@drawable/button_egg"
            	android:layout_alignTop="@id/final_button_flower"
            	android:layout_toRightOf="@id/final_button_kiss"
            	android:layout_marginLeft="18dp"/>
        
        	<Button 
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:id="@+id/final_button_shoe"
            	android:background="@drawable/button_shoe"
            	android:layout_alignTop="@id/final_button_flower"
            	android:layout_toRightOf="@id/final_button_egg"
            	android:layout_marginLeft="18dp"/>
        </RelativeLayout>
        
        <com.levelup.draw.gif.GifView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:id="@+id/final_gif2"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
        
        <com.levelup.draw.gif.GifView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:id="@+id/final_gif1"
            android:layout_alignTop="@id/final_gif2"
            android:layout_alignParentLeft="true"
            android:visibility="invisible" />
        
        <com.levelup.draw.gif.GifView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:id="@+id/final_gif3"
            android:layout_alignTop="@id/final_gif2"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />
        	
    </RelativeLayout>
    


</RelativeLayout>