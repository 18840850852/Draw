<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/first_room_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textColor="#2e0000"
        android:gravity="center_vertical"/>
    
    <Button
        android:id="@+id/first_room_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/first_room_enter"/>
    
    <ProgressBar
        android:id="@+id/first_room_wait"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@anim/progress_rotate"
        android:indeterminateBehavior="repeat"
        android:visibility="gone"
        />
    
</RelativeLayout>